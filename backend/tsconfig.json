{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "db/**/*",
    "features/**/*",
    "personas/**/*",
    "recommendations/**/*",
    "ai/**/*",
    "guardrails/**/*",
    "middleware/**/*",
    "admin/**/*",
    "services/**/*",
    "utils/**/*",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}


